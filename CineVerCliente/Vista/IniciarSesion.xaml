<UserControl x:Class="CineVerCliente.Vista.IniciarSesion"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vistaModelo="clr-namespace:CineVerCliente.ModeloVista"
             d:DataContext="{d:DesignInstance Type=vistaModelo:IniciarSesionModeloVista}"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    <Viewbox Stretch="Fill">
        <Grid Height="600" Width="1000">
            <!-- Imagen de fondo -->
            <Image Source="/Vista/FondoLogin2.jpg" Stretch="UniformToFill"/>

            <!-- Panel de contenido -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Panel derecho con login -->
                <Border Grid.Column="1"
                    Background="#DF1E1E1E"
                    Padding="20"
                    CornerRadius="12"
                    Margin="32">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                        <!-- Imagen encima del título -->
                        <Image Source="/Vista/cinever logo.png"
                           Width="100"
                           Height="100"
                           Margin="0,0,0,10"
                           HorizontalAlignment="Center"/>

                        <TextBlock Text="Iniciar sesión"
                               Foreground="White"
                               FontSize="36"
                               FontWeight="Bold"
                               Margin="0,0,0,30"
                               HorizontalAlignment="Center"/>

                        <!-- Matrícula -->
                        <TextBlock Text="Matrícula de empleado"
                               Foreground="White"
                               FontSize="14"
                               Margin="0,0,0,5" />
                        <TextBox Name="Matricula"
                             Style="{StaticResource Textbox}" 
                             MaxLength="60"
                             PreviewTextInput="CampoAlfanumerico"
                             Text="{Binding Matricula, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,15" />
                        <Label x:Name="MatriculaCampoVacio"
                           Style="{StaticResource TextoCamposVacio}"
                           Visibility="{Binding MatriculaCampoVacio}"
                           Margin="0,0,0,5" />

                        <!-- Contraseña -->
                        <TextBlock Text="Contraseña"
                               Foreground="White"
                               FontSize="14"
                               Margin="0,0,0,5" />
                        <PasswordBox Name="Contrasenia"
                                 Style="{StaticResource PasswordBox}"
                                 MaxLength="60"
                                 PreviewTextInput="ContraseñaValida"
                                 PasswordChanged="PasswordBox_PasswordChanged"
                                 Margin="0,0,0,15" />
                        <Label x:Name="ContraseñaCampoVacio"
                           Style="{StaticResource TextoCamposVacio}"
                           Visibility="{Binding ContraseñaCampoVacio}"
                           Margin="0,0,0,5" />

                        <!-- Error -->
                        <Label x:Name="DatosIncorrectos"
                           Content="La matrícula o contraseña son incorrectos"
                           FontSize="12"
                           Foreground="{StaticResource Rojo}"
                           Visibility="{Binding DatosIncorrectos}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,15" />

                        <!-- Botones alineados verticalmente -->
                        <Button Content="Iniciar sesión"
                            Style="{StaticResource BotonConfirmarBlanco}"
                            Command="{Binding IniciarSesionComando}"
                            Margin="0,10,0,0"
                            HorizontalAlignment="Center"/>

                        <Button Content="Registrarse"
                            Style="{StaticResource BotonNegro}"
                            Command="{Binding RegistrarseComando}"
                            Margin="0,10,0,0"
                            HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Viewbox>
</UserControl>