<UserControl x:Class="CineVerCliente.Vista.AgregarProductoDulceria"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vistaModelo="clr-namespace:CineVerCliente.ModeloVista" d:DataContext="{d:DesignInstance Type=vistaModelo:AgregarProductoDulceriaModeloVista}"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid>
        <Viewbox Stretch="Fill">
            <Grid Background="{StaticResource Fondo_Sucursal}" Margin="0,0,0,0"
                  Height="600" Width="1000">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Background="White" Padding="20" Margin="0,443,0,0" Grid.RowSpan="3"/>

                <Grid Grid.Row="1" Margin="150,52,150,0" Background="{StaticResource Negro}" Grid.RowSpan="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Content="Agregar inventario"
               HorizontalAlignment="Center"
               FontSize="20"
               Foreground="White"
               Margin="0,6,0,24"/>

                    <TextBlock Grid.Row="1"
                   Margin="20,0,20,0"
                   Background="LightGray"
                   Foreground="Black"
                   Text="                  Imagen                          Nombre                       Costo unitario         Precio venta unitario         Inventario"
                   Height="30"
                   VerticalAlignment="Center"/>

                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="12,0,10,121">
                        <ItemsControl ItemsSource="{Binding Productos}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="10" Height="130" Background="White">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="140"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="120"/>
                                        </Grid.ColumnDefinitions>

                                        <Image Source="{Binding Imagen}" 
                                               Width="100" Height="100" Margin="0" 
                                               Grid.Column="0" 
                                               VerticalAlignment="Center"/>

                                        <TextBlock Text="{Binding Nombre}" 
                                FontWeight="Bold" FontSize="16"
                                VerticalAlignment="Center"
                                Margin="10,0,0,0"
                                Grid.Column="1"/>

                                        <TextBlock Text="{Binding CostoUnitario}"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Grid.Column="2"/>

                                        <TextBlock Text="{Binding PrecioVentaUnitario}"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                Grid.Column="3"/>

                                        <TextBox Text="{Binding CantidadInventario, UpdateSourceTrigger=PropertyChanged}"
                                 VerticalAlignment="Center"
                                 HorizontalAlignment="Center"
                                 Width="50"
                                 Grid.Column="4"
                                 HorizontalContentAlignment="Center"
                                 PreviewTextInput="SoloNumeros"
                                 LostFocus="ValidarInventarioVacio"
                                 MaxLength="5"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>


                    <Grid Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Top" Height="200" Width="400" Margin="0,51,0,0" Grid.RowSpan="2">
                        <Grid Visibility="{Binding MostrarMensajeCancelarOperacion}">
                            <Rectangle Style="{StaticResource RectanguloAmarillo}" Height="200"/>
                            <TextBlock Text="¿Está seguro de cancelar la operación?"
                           Style="{StaticResource TextoMensajes}"
                           Height="64" Width="400" Margin="0,46,0,0"
                           VerticalAlignment="Top"/>

                            <Button Margin="74,126,215,37"
                        Content="Aceptar"
                        Style="{StaticResource BotonConfirmarBlanco}"
                        Command="{Binding ConfirmarCancelacionComando}"/>

                            <Button Margin="218,126,71,37"
                        Content="Cancelar"
                        Style="{StaticResource BotonNegro}"
                        Command="{Binding CancelarCancelacionComando}"/>
                        </Grid>

                        <Grid Visibility="{Binding MostrarMensajeConfirmarCambio}">
                            <Rectangle Style="{StaticResource RectanguloAmarillo}" Height="200"/>
                            <TextBlock Text="¿Está seguro de realizar los cambios?"
                           Style="{StaticResource TextoMensajes}"
                           Height="64" Width="400" Margin="0,46,0,0"
                           VerticalAlignment="Top"/>

                            <Button Margin="74,126,215,37"
                        Content="Aceptar"
                        Style="{StaticResource BotonConfirmarBlanco}"
                        Command="{Binding ConfirmarCambioComando}"/>

                            <Button Margin="218,126,71,37"
                        Content="Cancelar"
                        Style="{StaticResource BotonNegro}"
                        Command="{Binding CancelarCambioComando}"/>
                        </Grid>
                    </Grid>
                </Grid>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,30">
                    <Button Margin="10,0" Height="50" Width="150"
                Content="Confirmar cambios"
                Style="{StaticResource BotonConfirmarNaranja}"
                Command="{Binding MostrarMensajeConfirmarCambiosComando}"/>

                    <Button Margin="10,0" Height="50" Width="200"
                Content="Agregar nuevo producto"
                Style="{StaticResource BotonConfirmarNaranja}"
                Command="{Binding AgregarNuevoProductoComando}"/>

                    <Button Margin="10,0" Height="50" Width="150"
                Content="Cancelar operación"
                Style="{StaticResource BotonCancelar}"
                Command="{Binding CancelarComando}"/>
                </StackPanel>
            </Grid>
        </Viewbox>
    </Grid>
</UserControl>
