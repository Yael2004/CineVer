<UserControl x:Class="CineVerCliente.Vista.AgregarSucursalDatos"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CineVerCliente.Vista"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid>
        <Viewbox Stretch="Fill">
            <Grid>
                <Grid Background="{StaticResource Blanco}"/>
                <Grid Background="{StaticResource Fondo_Sucursal}" Margin="0,0,0,106"/>

                <Grid>
                    <Rectangle
                    Fill="{StaticResource Negro}"
                    Width="600"
                    Height="501"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,99,0,0">

                    </Rectangle>

                    <Label 
                    Content="Nombre de la sucursal"
                    FontSize="20"
                    Foreground="White" Margin="202,177,573,379"/>


                    <TextBox Name="Nombre"
                         Style="{StaticResource Textbox}" Margin="432,181,216,384"/>
                    <Label 
                    Content="Abrir sucursal"
                    HorizontalAlignment="Center"
                    FontSize="20"
                    Foreground="White" Margin="0,105,0,451"/>

                    <TextBox x:Name="Estado"
                    Style="{StaticResource Textbox}" Margin="314,243,500,322"/>

                    <TextBox x:Name="Ciudad"
                    Style="{StaticResource Textbox}" Margin="314,300,500,265"/>

                    <TextBox x:Name="Calle"
                    Style="{StaticResource Textbox}" Margin="314,354,500,211"/>

                    <Label 
                    Content="Estado"
                    HorizontalAlignment="Left"
                    FontSize="20"
                    Foreground="White" Margin="221,238,0,318"/>

                    <Label 
                    Content="Ciudad"
                    HorizontalAlignment="Left"
                    FontSize="20"
                    Foreground="White" Margin="221,296,0,260"/>

                    <Label 
                    Content="Calle"
                    HorizontalAlignment="Left"
                    FontSize="20"
                    Foreground="White" Margin="221,350,0,206"/>

                    <TextBox x:Name="Estado_Copiar"
                    Style="{StaticResource Textbox}" Margin="598,265,216,300"/>

                    <TextBox x:Name="Estado_Copiar1"
                    Style="{StaticResource Textbox}" Margin="598,332,216,233"/>

                    <Label 
                    Content="C.P."
                    HorizontalAlignment="Left"
                    FontSize="20"
                    Foreground="White" Margin="535,260,0,0" Height="44" VerticalAlignment="Top"/>

                    <Label 
                    Content="Número"
                    HorizontalAlignment="Left"
                    FontSize="20"
                    Foreground="White" Margin="515,328,0,228"/>

                    <TextBox x:Name="Calle_Copiar"
                    Style="{StaticResource Textbox}" Margin="298,484,516,81"/>

                    <TextBox x:Name="Calle_Copiar1"
                    Style="{StaticResource Textbox}" Margin="540,484,274,81"/>

                    <Label 
                    Content="Hora de apertura"
                    HorizontalAlignment="Left"
                    FontSize="20"
                    Foreground="White" Margin="311,440,0,116"/>

                    <Label 
                    Content="Hora de cierre"
                    HorizontalAlignment="Left"
                    FontSize="20"
                    Foreground="White" Margin="565,440,0,116"/>

                    <Button
                    Content="Siguiente"
                    Style="{StaticResource BotonConfirmarAmarillo}" Margin="310,544,528,10"/>

                    <Button
                    Content="Regresar"
                    Style="{StaticResource BotonConfirmarBlanco}" Margin="544,544,278,10"
                    />


                </Grid>
            </Grid>
        </Viewbox>
    </Grid>
</UserControl>
