<UserControl x:Class="CineVerCliente.Vista.NotificacionExito"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CineVerCliente.Vista"
        mc:Ignorable="d"
        Width="300" Height="100"
        Opacity="0"
        x:Name="Root">

    <Border Background="{StaticResource Amarillo}"
            CornerRadius="12"
            Padding="15"
            Margin="10"
            Width="Auto"
            Height="Auto"
            MaxHeight="200"
            MaxWidth="300">
        
        <TextBlock x:Name="MensajeText"
                   Foreground="White"
                   FontSize="16"
                   TextWrapping="Wrap"
                   TextTrimming="None"/>
    </Border>
</UserControl>
