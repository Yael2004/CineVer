<UserControl x:Class="CineVerCliente.Vista.ConsultarEmpleados"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vistaModelo="clr-namespace:CineVerCliente.ModeloVista" d:DataContext="{d:DesignInstance Type=vistaModelo:ConsultarEmpleadosModeloVista}"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    <Grid>
        <Viewbox Stretch="Fill">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBox Grid.Row="0" 
                    Margin="0,0,0,10"
                    Text="{Binding TextoBusqueda, UpdateSourceTrigger=PropertyChanged}"/>
                <!--Buscar como hacer que no cambie de tamaño y sea fijo-->

                <ListView Grid.Row="1"
                    
                    ItemsSource="{Binding ElementosFiltrados}"
                    BorderBrush="LightGray"
                    Background="White"
                    ScrollViewer.VerticalScrollBarVisibility="Auto">

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Gray" 
                                BorderThickness="1" 
                                Padding="10" 
                                Margin="5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!--<Image Width="50" 
                                    Height="50" 
                                    Source="" 
                                    Grid.Column="0"/> Buscar como poner imagenes-->

                                    <StackPanel Grid.Column="1" 
                                        VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Nombre}" FontWeight="Bold"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" 
                                        Orientation="Horizontal" 
                                        HorizontalAlignment="Right">
                                        <Button Content="Editar" Margin="2"/>
                                        <Button Content="Borrar" Margin="2"/>
                                        <Button Content="Ver" Margin="2"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Viewbox>
    </Grid>
</UserControl>
