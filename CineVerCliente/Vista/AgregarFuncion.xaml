<UserControl x:Class="CineVerCliente.Vista.AgregarFuncion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"        
        xmlns:vistaModelo="clr-namespace:CineVerCliente.ModeloVista" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"

        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        d:DataContext="{d:DesignInstance Type=vistaModelo:AgregarFuncionModeloVista}"
        mc:Ignorable="d" 
        d:DesignHeight="600" d:DesignWidth="1000">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="1*"/>


        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="8*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>

        </Grid.ColumnDefinitions>

        <!-- Fondo de pantalla con imagen -->
        <Image Source="/Vista/FondoFunciones.jpg"
               Stretch="UniformToFill" Grid.ColumnSpan="3"
               Panel.ZIndex="0" Grid.Row="0" Grid.RowSpan="3" />


        <!-- Contenedor del formulario centrado -->
        <Border   MinWidth="700"
                  MinHeight="500"
                Grid.Column="1"
                Background="#dF1E1E1E"
                Grid.Row="1"
                Grid.RowSpan="3"
                CornerRadius="12"
                Padding="20"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Panel.ZIndex="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.ColumnSpan="2" Text="Agregar Funcion"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0 0 0 10"/>
                    <StackPanel Grid.Column="0" VerticalAlignment="Top" Grid.Row="1" Grid.ColumnSpan="1" Margin="15">
                        <TextBlock Text="Título de la película:" Foreground="White" />
                        <ComboBox ItemsSource="{Binding Peliculas}" 
              SelectedItem="{Binding PeliculaSeleccionada}" 
              DisplayMemberPath="nombre"
              
              Margin="0,5,0,0"/>
                        <Label x:Name="NombreSucursalCampoVacio" Style="{StaticResource TextoCamposVacio}" Visibility="{Binding TituloVacio}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" VerticalAlignment="Top" Grid.Row="1" Margin="15">
                        <TextBlock Text="Sala:" Foreground="White" />
                        <ComboBox ItemsSource="{Binding Salas}" 
              SelectedItem="{Binding SalaSeleccionada}" 
              DisplayMemberPath="nombre"
              Margin="0,5,0,0"/>
                        <Label x:Name="SalaCampoVacio" Style="{StaticResource TextoCamposVacio}" Visibility="{Binding TituloVacio}"/>
                    </StackPanel>





                    <!-- Lado izquierdo -->
                    <StackPanel Grid.Column="0" VerticalAlignment="Top" Grid.Row="2">

                        <TextBlock Text="Póster promocional:" Foreground="White" Margin="0,10,0,0"/>
                        <Button Width="Auto" Height="Auto" Background="Transparent" BorderThickness="0" Command="{Binding CargarImagenCommand}">
                            <Image Source="{Binding Poster, FallbackValue=/Vista/Icono_IMagen_BLanco.png, TargetNullValue=/Vista/Icono_IMagen_BLanco.png}" Height="180" />

                        </Button>
                        <Label x:Name="imagenCampoVacio" Style="{StaticResource TextoCamposVacio}" Visibility="{Binding PosterVacio}"/>


                    </StackPanel>

                    <!-- Lado derecho -->






                    <!-- Botón de regresar -->
                    <StackPanel Grid.Row="5" Grid.Column="0" VerticalAlignment="Top" Margin="20,0,0,0">
                        <Button Content="Regresar"
                        Grid.Row="4"
                        Grid.ColumnSpan="2"
                        Command="{Binding RegresarCommand}"
                        HorizontalAlignment="Center"
                        Width="100"
                        Margin="0,20,0,0" Style="{StaticResource BotonConfirmarBlanco}"/>
                    </StackPanel>

                    <!-- Botón de Agregar -->
                    <StackPanel Grid.Row="5" Grid.Column="1" VerticalAlignment="Top" Margin="20,0,0,0">
                        <Button Content="Registrar"
         Grid.Row="4"
                            
         Command="{Binding GuardarCommand}"
         Grid.ColumnSpan="2"
         
         HorizontalAlignment="Center"
         Width="100"
         Margin="0,20,0,0" Style="{StaticResource BotonConfirmarAmarillo}"/>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl> 
