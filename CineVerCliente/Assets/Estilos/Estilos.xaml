<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="Amarillo" Color="#E5A000"/>
    <SolidColorBrush x:Key="Naranja" Color="#FF7315"/>
    <SolidColorBrush x:Key="Rojo" Color="#EC221F"/>
    <SolidColorBrush x:Key="Blanco" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="Negro" Color="#232020"/>
    <SolidColorBrush x:Key="Toronja" Color="#FFA053"/>
    <SolidColorBrush x:Key="Azul" Color="#441FEC"/>

    <ImageBrush x:Key="Fondo_Sucursal"
                ImageSource="/Assets/Imagenes/Fondos/Fondo_Sucursal.png"
                Stretch="UniformToFill"/>

    <ImageBrush x:Key="Fondo_VentaBoletos"
                ImageSource="/Assets/Imagenes/Fondos/Fondo_VentaBoletos.png"
                Stretch="UniformToFill"/>

    <Style x:Key="Textbox" TargetType="TextBox">
        <Setter Property="Width" Value="558"/>
        <Setter Property="Height" Value="35"/>
        <Setter Property="Margin" Value="537,367,0,0"/>
        <Setter Property="Padding" Value="12,0"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="#2C2C2C"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8"
                            SnapsToDevicePixels="True">
                        <ScrollViewer x:Name="PART_ContentHost" VerticalScrollBarVisibility="Auto"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="Black"
                                  Direction="270"
                                  ShadowDepth="0"
                                  BlurRadius="6"
                                  Opacity="0.5"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="BotonConfirmarAmarillo" TargetType="Button">
